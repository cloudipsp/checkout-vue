{
  "name": "fondy-checkout-vue",
  "version": "1.12.0",
  "description": "Fondy checkout",
  "author": "Михайло Голубовський <lamerumiata@gmail.com>",
  "scripts": {
    "serve": "vue-cli-service serve",
    "serve:dist": "serve -s dist",
    "build": "npm install && npm run locale && vue-cli-service build",
    "lint": "vue-cli-service lint",
    "lint:style": "vue-cli-service lint:style",
    "test:e2e": "vue-cli-service test:e2e --reporter ./tests/e2e/reporter/html-reporter.js",
    "test:unit": "vue-cli-service test:unit",
    "release": "./scripts/release.sh",
    "stylelint:fix": "stylelint src/{**/,**/**/}*.scss --syntax scss --color --formatter verbose --fix",
    "eslint:fix": "eslint src/**/*.{js,vue} --fix",
    "prettier:fix": "prettier src/**/*.{js,vue,scss} --write",
    "locale": "./node_modules/gulp/bin/gulp.js locale"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mixaDev/checkout-vue.git"
  },
  "unpkg": "dist/checkout.js",
  "dependencies": {
    "@umpirsky/country-list": "git+https://github.com/umpirsky/country-list.git",
    "async-validator": "^1.11.2",
    "axios": "^0.19.2",
    "bootstrap-vue": "^2.15.0",
    "core-js": "^3.6.5",
    "css-vars-ponyfill": "^2.3.2",
    "ipsp-js-sdk": "^1.0.36",
    "ismobilejs": "^1.1.1",
    "vee-validate": "^2.2.15",
    "vue": "^2.6.11",
    "vue-i18n": "^8.21.1",
    "vue2-datepicker": "^3.6.1"
  },
  "devDependencies": {
    "@ascendancyy/vue-cli-plugin-stylelint": "^1.1.2",
    "@vue/cli-plugin-babel": "~4.3.1",
    "@vue/cli-plugin-e2e-nightwatch": "^3.12.1",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-plugin-unit-jest": "^3.12.1",
    "@vue/cli-service": "^3.12.1",
    "@vue/eslint-config-prettier": "^5.1.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^23.6.0",
    "chromedriver": "^76.0.1",
    "circular-dependency-plugin": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^5.0.0",
    "git-revision-webpack-plugin": "^3.0.6",
    "gulp": "^4.0.2",
    "image-webpack-loader": "^6.0.0",
    "lint-staged": "^9.5.0",
    "minimist": "^1.2.5",
    "node-gettext-generator": "^0.2.12",
    "node-sass": "^4.14.1",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "stylelint-config-prettier": "^5.3.0",
    "stylelint-config-twbs-bootstrap": "^0.4.0",
    "vue-template-compiler": "^2.6.11"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "@vue/prettier"
    ],
    "rules": {
      "no-useless-escape": 0,
      "no-console": 0,
      "no-var": 2,
      "vue/html-self-closing": [
        "warn",
        {
          "html": {
            "void": "always",
            "normal": "always",
            "component": "always"
          },
          "svg": "always",
          "math": "always"
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "stylelint": {
    "syntax": "scss",
    "extends": [
      "stylelint-config-twbs-bootstrap/scss",
      "stylelint-config-prettier"
    ],
    "rules": {
      "no-descending-specificity": null,
      "media-feature-name-no-unknown": null,
      "scss/dollar-variable-default": null
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "defaults"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!vee-validate)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ],
    "src/**/*.scss": [
      "vue-cli-service lint:style",
      "node_modules/.bin/prettier --write",
      "git add"
    ]
  }
}
