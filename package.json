  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && git add dist/* -u"
    }
  },
  "lint-staged": {
    "src/**/*.{js,vue}": [
      "node_modules/.bin/eslint --max-warnings=0",
      "node_modules/.bin/prettier --write",
      "git add"
    ],
    "src/**/*.less": [
      "node_modules/.bin/stylelint",
      "node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "stylelint": {
    "syntax": "less",
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "no-descending-specificity": null,
      "media-feature-name-no-unknown": null
    }
  }
}
